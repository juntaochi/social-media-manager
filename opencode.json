{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "openai": {
      "models": {
        "gpt-5.2-codex": {
          "variants": {
            "high": {
              "reasoningEffort": "high",
              "textVerbosity": "low",
              "reasoningSummary": "auto"
            },
            "low": {
              "reasoningEffort": "low",
              "textVerbosity": "low",
              "reasoningSummary": "auto"
            }
          }
        }
      }
    }
  },
  "mcp": {
    "github": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-github"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "{env:GITHUB_TOKEN}"
      },
      "enabled": true
    },
    "typefully": {
      "type": "local",
      "command": ["python3", "./scripts/typefully_mcp_proxy.py"],
      "environment": {
        "TYPEFULLY_API_KEY": "{env:TYPEFULLY_KEY}"
      },
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "./data"],
      "enabled": true
    },
    "custom_media_uploader": {
      "type": "local",
      "command": ["python3", "./scripts/bridge_typefully.py", "--server-mode"],
      "environment": {
        "TYPEFULLY_API_KEY": "{env:TYPEFULLY_KEY}"
      },
      "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "{env:CONTEXT7_MCP_URL}",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    }
  }
}
